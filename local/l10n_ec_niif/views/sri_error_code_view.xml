<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="sri_error_code_tree_view">
        <field name="name">sri.error.code.tree</field>
        <field name="model">sri.error.code</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" />
                <field name="name" />
                <field name="solution" />
            </tree>
        </field>
    </record>
