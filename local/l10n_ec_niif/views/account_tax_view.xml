<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="account_tax_form_view" model="ir.ui.view">
        <field name="name">account.tax.form</field>
        <field name="model">account.tax</field>
        <field name="inherit_id" ref="account.view_tax_form" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="l10n_ec_ats_code" />
                <field name="l10n_ec_xml_fe_code" />
            </field>
        </field>
    </record>
    <record id="account_tax_template_form_view" model="ir.ui.view">
        <field name="name">account.tax.template.form</field>
        <field name="model">account.tax.template</field>
        <field name="inherit_id" ref="account.view_account_tax_template_form" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="l10n_ec_ats_code" />
                <field name="l10n_ec_xml_fe_code" />
            </field>
        </field>
    </record>
</odoo>
