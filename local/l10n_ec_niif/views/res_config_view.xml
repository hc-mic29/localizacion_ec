                                    <div class="row mt16">
                                        <label string="Login Url" for="l10n_ec_sri_login_url" class="col-md-5" />
                                        <field name="l10n_ec_sri_login_url" class="o_light_label" />
                                    </div>
                                    <div class="row mt16">
                                        <label string="Portal Password" for="l10n_ec_sri_password" class="col-lg-5" />
                                        <field name="l10n_ec_sri_password" password="1" class="o_light_label" />
                                    </div>
                                </div>
                            </div>
                        </div>
