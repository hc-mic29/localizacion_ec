<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_account_sri_config_settings" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.sri</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40" />
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div
                        class="app_settings_block"
                        data-string="S.R.I."
                        data-key="l10n_ec_niif"
                        groups="account.group_account_manager"
                    >
                        <h2>Invoice</h2>
                        <div class="col-12 col-lg-6 o_setting_box" id="sri_invoice">
                            <div class="o_setting_left_pane">

                            </div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Final Consumer</span>
                                <div class="text-muted">
                                    Limit for billing in sales for final consumer, total amount
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label
                                            string="Limit Amount"
                                            for="l10n_ec_consumidor_final_limit"
                                            class="col-lg-3 o_light_label"
                                        />
                                        <field name="l10n_ec_consumidor_final_limit" class="text-center oe_inline" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <h2>Credit Note</h2>
                        <div class="col-12 col-lg-6 o_setting_box" id="sri_invoice">
                            <div class="o_setting_left_pane">

                            </div>
                            <div class="o_setting_right_pane">
                                <div class="row">
                                    <label
                                        for="l10n_ec_cn_reconcile_policy"
                                        class="col-5"
                                        string="Amounts Conciliation Policy"
                                    />
                                    <field name="l10n_ec_cn_reconcile_policy" widget="radio" />
                                    <div class="text-muted">
                                        <ul>
                                            <li>
                                                <b>Restrict greater than Invoice:</b>
                                                When Credit Note is greather than invoice, raise exception and cannot
                                                validate
                                            </li>
                                            <li>
                                                <b>Always Allow:</b>
                                                Credit Notes are not compared with Invoice amount total, can be validate
                                                without restriction
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <h2>Withhold</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="sri_withhold">
                                <div class="o_setting_left_pane">

                                </div>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Withhold Sales</span>
                                    <div class="text-muted">Accounting config for withhold on sales</div>
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label
                                                string="IVA Account"
                                                for="l10n_ec_withhold_sale_iva_account_id"
                                                class="col-lg-3 o_light_label"
                                            />
                                            <field name="l10n_ec_withhold_sale_iva_account_id" />
                                        </div>
                                        <div class="row mt16">
                                            <label
                                                string="IVA Tag"
                                                for="l10n_ec_withhold_sale_iva_tag_id"
                                                class="col-lg-3 o_light_label"
                                            />
                                            <field name="l10n_ec_withhold_sale_iva_tag_id" />
                                        </div>
                                        <div class="row mt16">
                                            <label
                                                string="Rent Account"
                                                for="l10n_ec_withhold_sale_rent_account_id"
                                                class="col-lg-3 o_light_label"
                                            />
                                            <field name="l10n_ec_withhold_sale_rent_account_id" />
